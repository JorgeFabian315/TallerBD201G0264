    <Style TargetType="Button" x:Key="BotonAgregarAmigo">
        <Setter Property="FontSize"
                Value="30" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="FontFamily"
                Value="/Assets/#Dancing Script" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Width"
                Value="130" />
        <Setter Property="Height"
                Value="50" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Margin"
                Value="10,0,10,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Vista}"
                                     Value="Agregar">
                            <Setter Property="Content"
                                    Value="Agregar" />
                            <Setter Property="Command"
                                    Value="{Binding CreateCommand}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Vista}"
                                     Value="Editar">
                            <Setter Property="Content"
                                    Value="Guardar" />
                            <Setter Property="Command"
                                    Value="{Binding UpdateCommand}" />
                        </DataTrigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="135"
                                                     BeginTime="0:0:0" Duration="0:0:0.3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     To="55"
                                                     BeginTime="0:0:0"
                                                     Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     To="130"
                                                     BeginTime="0:0:0"
                                                     Duration="0:0:0.3" />
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     To="50"
                                                     BeginTime="0:0:0"
                                                     Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
